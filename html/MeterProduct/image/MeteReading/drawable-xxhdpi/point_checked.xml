<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <shape android:shape="oval">
            <gradient
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#c2e5fe"
                android:gradientRadius="30dp"
                android:startColor="#43a7f7"
                android:type="radial" />
            <size
                android:width="60dp"
                android:height="60dp" />
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#43a7f7" />
            <size
                android:width="48dp"
                android:height="48dp" />
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <size
                android:width="18dp"
                android:height="18dp" />
        </shape>
    </item>
    <item
        android:gravity="center"
        android:left="18dp"
        android:top="18dp">
        <shape android:shape="oval">
            <solid android:color="#43a7f7" />
            <size
                android:width="18dp"
                android:height="18dp" />
        </shape>
    </item>
    <item
        android:bottom="18dp"
        android:gravity="center"
        android:left="18dp">
        <shape android:shape="oval">
            <solid android:color="#43a7f7" />
            <size
                android:width="18dp"
                android:height="18dp" />
        </shape>
    </item>
    <item
        android:gravity="center"
        android:right="18dp"
        android:top="18dp">
        <shape android:shape="oval">
            <solid android:color="#43a7f7" />
            <size
                android:width="18dp"
                android:height="18dp" />
        </shape>
    </item>
    <item
        android:bottom="18dp"
        android:gravity="center"
        android:right="18dp">
        <shape android:shape="oval">
            <solid android:color="#43a7f7" />
            <size
                android:width="18dp"
                android:height="18dp" />
        </shape>
    </item>
</layer-list>